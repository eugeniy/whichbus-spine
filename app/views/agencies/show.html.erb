<div class="page-header">
	<h1><%= content_tag :span, @agency.name, class: 'btn btn-large btn-info' %>
		<small><%= link_to "Official Site", @agency.url %> | <a href="tel:<%= @agency.phone %>"><%= @agency.phone %></a></small>
		<%= raw api_links @agency %></h1>
	<div class="details">
		<%= @agency.disclaimer %>
	</div>
</div>

<h2>Routes <small><%= @agency.routes.count %></small></h2>

<ul>
<% @agency.routes.order('name').each do |route| %>
	<%= raw route_item(route) %>
<% end %>
</ul>
